    "configurations": [
        {
            "name": "Launch file",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "console": "integratedTerminal",
            "program": "${file}"
        },
        {
            "name": "Launch Server(debug)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/server/main.go"
        },
        {
            "name": "Launch Peer(debug)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/client/main.go",
            "args": ["-role", "1"]
        },
        {
            "name": "Launch Host(debug)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/client/main.go",
            "args": ["-role", "2"]
        },
